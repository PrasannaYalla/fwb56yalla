extends layout

block content
  h1= title
  - const grapes  = ['grapes_type','Weight','Cost']
  - let results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each results, index in grapes 
        div(class='col-sm-2' onclick='buy('+index+')') #{results} 